---
import SectionTitle from "../Titles/SectionTitle.astro";
import DualCards, { type ListItem } from "../Cards/DualCards.astro";

export type DualCard = {
  title: string;
  description: string;
  isReversed: boolean;
  listItems: ListItem[];
};

type Props = {
  title: string;
  description: string;
  cardsContent: DualCard[];
};

const { title, description, cardsContent } = Astro.props;
---

<section class="container mx-auto p-4 space-y-14">
  <SectionTitle title={title} description={description} />
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    {
      cardsContent.map((e) => (
        <DualCards
          isReversed={e.isReversed}
          title={e.title}
          itemsArray={e.listItems}
        />
      ))
    }
  </div>
</section>

<style>
  .white-text-black-bg {
    color: var(--color-secondary);
    background-color: var(--color-primary);
  }
</style>
