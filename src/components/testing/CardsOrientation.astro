---
type Props = {
  isReversed: boolean;
};

const isReversed = Astro.props.isReversed;
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
  <div class={isReversed ? "order-2" : "order-1"}>
    <div class="bg-blue-200 p-4 text-center">A</div>
  </div>
  <div class={isReversed ? "order-1" : "order-2"}>
    <div class="bg-pink-200 p-4 text-center">B</div>
  </div>
</div>
